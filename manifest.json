{
  "name": "No Shills",
  "description": "",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
  	"matches": ["https://twitter.com/*"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [ "storage", "tabs", "scripting" ],
  "host_permissions": [ "https://twitter.com/*" ]
}
